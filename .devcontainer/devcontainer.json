{
  "name": "Ubuntu25.04 with GCC15",
  "build": {
      "dockerfile": "./Dockerfile",
      "context": ".",
      "args": {
        "USER_UID": "${localEnv:USER_UID}",
        "USER_GID": "${localEnv:USER_GID}"
      }
  },
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "remoteUser": "dev",
  "postStartCommand": "conan profile detect || true",
  "customizations": {
    "vscode": {
      "extensions": [
        "llvm-vs-code-extensions.vscode-clangd",
        "vadimcn.vscode-lldb",
        "twxs.cmake",
        "streetsidesoftware.code-spell-checker-russian",
        "streetsidesoftware.code-spell-checker",
        "matepek.vscode-catch2-test-adapter"
      ]
    }
  },
  "mounts": [
    "source=${env:HOME}/.gitconfig,target=/home/dev/.gitconfig,type=bind,consistency=cached",
    "source=${env:HOME}/.conan2,target=/home/dev/.conan2,type=bind,consistency=cached"
  ]
}